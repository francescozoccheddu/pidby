{
  "name": "@francescozoccheddu/pidby",
  "version": "0.0.15",
  "description": "PDF creator from web pages with built-in Pug, EJS, Sass and TypeScript support",
  "author": "Francesco Zoccheddu (https://github.com/francescozoccheddu/)",
  "homepage": "https://github.com/francescozoccheddu/pidby#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/francescozoccheddu/pidby.git"
  },
  "bugs": {
    "url": "https://github.com/francescozoccheddu/pidby/issues"
  },
  "keywords": [
    "pdf",
    "web",
    "html",
    "css",
    "sass",
    "scss",
    "script",
    "typescript",
    "util",
    "cli",
    "node"
  ],
  "scripts": {
    "start": "tsx --tsconfig ./tsconfig.json ./src/main.ts",
    "build": "shx rm -rf dist tsconfig.tsbuildinfo && eslint ./src && tsc --project ./tsconfig.json && tsc-alias -p tsconfig.json && npm-prepare-dist -s build -s start -s lint -s publish -f LICENSE -f README.md && shx cp -r schema/* dist && lobe-shebang -t ./dist/main.js && shx chmod +x dist/main.js",
    "lint": "tsc --noEmit --project ./tsconfig.json && eslint ./src",
    "publish": "npm run build && cd dist && npm publish --access public"
  },
  "bin": {
    "pidby": "./main.js"
  },
  "devDependencies": {
    "@lobehub/cli-shebang": "^1.0.1",
    "@tsconfig/strictest": "^2.0.3",
    "@types/command-exists": "^1.2.3",
    "@types/ejs": "^3.1.5",
    "@types/find-package-json": "^1.2.6",
    "@types/js-yaml": "^4.0.9",
    "@types/koa": "^2.14.0",
    "@types/koa-send": "^4.1.6",
    "@types/node": "^20.11.17",
    "@types/postcss-import": "^14.0.3",
    "@types/pug": "^2.0.10",
    "@types/wkhtmltopdf": "^0.3.8",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-no-relative-import-paths": "^1.5.3",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "npm-prepare-dist": "^0.4.1",
    "shx": "^0.3.4",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.7.1"
  },
  "dependencies": {
    "@francescozoccheddu/ts-goodies": "^0.0.6",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "ajv": "^8.12.0",
    "autoprefixer": "^10.4.17",
    "chokidar": "^3.6.0",
    "command-exists": "^1.2.9",
    "ejs": "^3.1.9",
    "find-package-json": "^1.2.0",
    "get-tsconfig": "^4.7.2",
    "ghostscript-node": "^1.5.0",
    "js-yaml": "^4.1.0",
    "koa": "^2.15.0",
    "koa-send": "^5.0.1",
    "pdf-merger-js": "^4.3.1",
    "postcss": "^8.4.35",
    "postcss-import": "^16.0.0",
    "pug": "^3.0.2",
    "puppeteer": "^22.0.0",
    "rollup": "^4.10.0",
    "rollup-plugin-memory-fs": "^1.0.3",
    "sass": "^1.70.0",
    "typescript": "^5.3.3",
    "wkhtmltopdf": "^0.4.0",
    "yargs": "^17.7.2"
  }
}